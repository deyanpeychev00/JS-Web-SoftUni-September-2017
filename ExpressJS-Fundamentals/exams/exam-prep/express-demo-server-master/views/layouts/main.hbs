<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My Demo Server</title>
    <link href="/css/site.css" type="text/css" rel="stylesheet">

</head>
<body>
    <div class="container">
        <header>
            <ul class="menu" style="position: fixed; width: 97.5%; top:0">
                <li><a href="/">Home</a></li>
                {{#if currentUser}}
                    {{#if currentUser.isBlocked}}
                        <li style="float: right;"><a href="/user/{{currentUser.username}}">Hello, <b>{{currentUser.username}}</b></a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/list?page=1">List</a></li>
                        {{#if currentUser.isAdmin}}
                            <li><a href="/addHotel">Generate Hotel</a></li>
                            <li><a href="/addCategories">Add Categories</a></li>
                            <li><a href="/manageUsers/{{currentUser._id}}">Manage Users</a></li>
                        {{/if}}
                        <li>
                            <form id="logout-form" action="/logout" method="post"></form>
                            <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
                        </li>
                    {{else}}
                        <li style="float: right;"><a href="/user/{{currentUser.username}}">Hello, <b>{{currentUser.username}}</b></a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/addHotel">Generate Hotel</a></li>
                        <li><a href="/list?page=1">List</a></li>
                        {{#if currentUser.isAdmin}}
                            <li><a href="/addCategories">Add Categories</a></li>
                            <li><a href="/manageUsers/{{currentUser._id}}">Manage Users</a></li>
                        {{/if}}
                        <li>
                            <form id="logout-form" action="/logout" method="post"></form>
                            <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
                        </li>
                    {{/if}}
                {{else}}
                <li><a href="/loginRegister">Login/Register</a></li>

                {{/if}}
            </ul>
        </header>
        <main style="padding-top: 20px">
            {{#if successMessage}}
            <span class="info">{{successMessage}}</span> {{/if}}
            {{#if globalError}}
            <span class="alert">{{globalError}}</span> {{/if}} {{{body}}}
        </main>
    </div>
    <script src="/js/jq.js"></script>
    <script src="/js/js.js"></script>
</body>

</html>